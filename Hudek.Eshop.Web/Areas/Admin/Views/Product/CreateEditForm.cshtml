
@model ProductItem
@{
    if (ViewBag.Action != null)
    {


    <form asp-action="@ViewBag.Action" method="post">
        @{
            if (ViewBag.Action == nameof(ProductController.Edit))
            {
                <input asp-for="ID" type="hidden">

            }
        }
        <div class="form-group">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter Product Name">
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="text" class="form-control" placeholder="Enter Price">
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control" placeholder="Enter Description">
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    }
}


